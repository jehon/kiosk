  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "jh-wsl-profile.sh",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [
        "${workspaceFolder}/node_modules/.bin/electron",
        ".",
        "-f",
        "tests/kiosk.yml",
        "--dev-mode"
      ],
      "outputCapture": "std"
    },
    {
      "name": "Electron: Main attach",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "timeout": 30000
    },
    // {
    //   "name": "Electron: Renderer",
    //   "type": "chrome",
    //   "request": "attach",
    //   "port": 9223,
    //   "webRoot": "${workspaceFolder}",
    //   "timeout": 30000
    // },
    {
      "type": "node",
      "request": "launch",
      "name": "Jasmine server",
      "program": "${workspaceFolder}/node_modules/.bin/jasmine",
      "args": [
        "--config=tests/server/jasmine.json"
      ]
    },
  ],
