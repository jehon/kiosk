#!/usr/bin/env bash

set -o errexit
set -o pipefail

SWD="$(dirname "$( realpath "${BASH_SOURCE[0]}")")"

cd "$SWD/.." >/dev/null

CONF="${1:-etc/kiosk.yml}"

echo "Using configuration file: $CONF"

MOVIE="$( bin/conf "$CONF" ".fire.path" )"
STORAGE="var/fire"

echo "Store $MOVIE into $STORAGE"
mkdir -p "$( dirname "$STORAGE" )"

rsync "$MOVIE" "$STORAGE"
