#!/usr/bin/env bash

set -o errexit
set -o pipefail
shopt -s nullglob

SWD="$(dirname "$( realpath "${BASH_SOURCE[0]}")")"

if [ -n "$1" ]; then
    CONF="$( realpath "$1" )"
fi
CONF="${CONF:-etc/kiosk.yml}"

cd "/.."

echo "* Updating photos"
"$SWD"/photos-selector.js -f "$CONF"

echo "* Updating fire"
"$SWD"/fire-selector "$CONF"
